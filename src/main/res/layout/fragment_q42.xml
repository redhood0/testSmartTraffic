<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@mipmap/cartwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
    android:id="@+id/tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="20dp"
    android:text="xxx停车场"
    android:textSize="30dp"
    app:layout_constraintLeft_toRightOf="@+id/iv"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_biaozhun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="收费标准：5元/小时"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_chewei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="剩余车位： 4/10"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        app:layout_constraintTop_toBottomOf="@+id/tv_biaozhun" />

    <Button
        android:id="@+id/btn_refush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="刷新"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_chewei" />
</android.support.constraint.ConstraintLayout>