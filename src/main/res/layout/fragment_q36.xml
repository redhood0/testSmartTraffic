<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_today"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/sun"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2013xxxxxx"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_today"
        app:layout_constraintTop_toBottomOf="@+id/img_today" />

    <TextView
        android:id="@+id/tv_yubao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预报"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_data" />

    <TextView
        android:id="@+id/tv_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:text="北京"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:text="17°"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_where" />

    <LinearLayout
        android:id="@+id/ll_days"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_yubao"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@color/White"
        >
        <LinearLayout
            android:id="@+id/ll_day1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#83B6EB"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:id="@+id/tv_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19日（今天）"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                />
            <ImageView
                android:id="@+id/iv_we1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/sun"
                />
            <TextView
                android:id="@+id/tv_weather1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/tv_tmp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/12°"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                />

        </LinearLayout>
