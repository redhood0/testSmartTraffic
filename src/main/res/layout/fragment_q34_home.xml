<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bg_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETC充值"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv1"
        app:layout_constraintLeft_toLeftOf="@+id/iv1"
        app:layout_constraintRight_toRightOf="@+id/iv1"
        />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bg_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv1"
        app:layout_constraintRight_toLeftOf="@+id/iv3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETC余额"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv2"
        app:layout_constraintLeft_toLeftOf="@+id/iv2"
        app:layout_constraintRight_toRightOf="@+id/iv2"
        />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bg_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv2"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值记录"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/iv3"
        app:layout_constraintLeft_toLeftOf="@+id/iv3"
        app:layout_constraintRight_toRightOf="@+id/iv3"
        />

</android.support.constraint.ConstraintLayout>