<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2020年1月"
        android:textSize="30dp"
        android:textColor="@color/White"
        android:background="@color/Orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/calenar"
        app:layout_constraintLeft_toLeftOf="@+id/calenar"
        android:textAlignment="center"

        />

    <com.haibin.calendarview.CalendarView
        android:id="@+id/calenar"
        android:layout_width="500dp"
        android:textAlignment="center"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:month_view="com.lenovo.smarttraffic.ui.zujian.CustomMutilpMothView"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="乘车日期："
        app:layout_constraintLeft_toRightOf="@+id/calenar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_days"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="2018-04-03"
        app:layout_constraintLeft_toRightOf="@+id/calenar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="@color/White"
        android:background="@color/Blue"
        />

</android.support.constraint.ConstraintLayout>