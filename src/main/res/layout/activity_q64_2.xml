<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <include layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆编号：" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:hint="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号：" />


        <TextView
            android:id="@+id/tv_chepai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辽A765" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额：" />


        <TextView
            android:id="@+id/tv_10yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10元"
            android:background="#5A85EE"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv_50yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50元"
            android:background="#5A85EE"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv_100yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100元"
            android:background="#5A85EE"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <android.support.design.widget.TextInputLayout
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            android:id="@+id/textInputLayoutMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
        <EditText
            android:id="@+id/et_money"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="1~999"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"

            />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_chongzhi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="充值"
        />

</LinearLayout>